@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 class="text-center">Create a new account</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group row">
                <label asp-for="Input.FirstName" class="col-sm-3 col-form-label text-right"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.FirstName" class="form-control" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Input.LastName" class="col-sm-3 col-form-label text-right"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.LastName" class="form-control" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Input.Email" class="col-sm-3 col-form-label text-right"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Input.Address" class="col-sm-3 col-form-label text-right"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.Address" class="form-control" />
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Input.ZipCode" class="col-sm-3 col-form-label text-right"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.ZipCode" class="form-control" />
                    <span asp-validation-for="Input.ZipCode" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Input.City" class="col-sm-3 col-form-label text-right"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.City" class="form-control" />
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Input.Password" class="col-sm-3 col-form-label text-right"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <label asp-for="Input.ConfirmPassword" class="col-sm-3 col-form-label text-right"></label>
                <div class="col-sm-9">
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-12 text-center">
                    <button type="submit" class="btn btn-primary btn-block mt-3" style="max-width: 300px; margin: auto;">Register</button>
                </div>
            </div>
        </form>
    </div>
</div>
