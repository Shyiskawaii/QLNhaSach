@model QLNhaSach.Models.Bill

@{
    ViewData["Title"] = "Delete Bill";
}

<h1>Delete Bill</h1>

<h3>Are you sure you want to delete this bill?</h3>
<div>
    <h4>Bill</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Bill Date
        </dt>
        <dd class="col-sm-10">
            @Model.BillDate
        </dd>
        <dt class="col-sm-2">
            Bill Total
        </dt>
        <dd class="col-sm-10">
            @Model.BillTotal
        </dd>
        <dt class="col-sm-2">
            Bill Items
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var item in Model.BillItems)
                {
                    <li>@item.Book.BookName (Quantity: @item.Quantity, Price: @item.Price)</li>
                }
            </ul>
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
