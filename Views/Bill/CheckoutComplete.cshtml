@model QLNhaSach.Models.Bill

<h1>Thank you for your purchase!</h1>

<h5 class="mt-5">Bill Id: @Model.Id</h5>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Book</th>
            <th>Price</th>
            <th>Quantity</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BillItems)
        {
            var itemTotal = item.Book.Price * item.Quantity;
            <tr>
                <td>
                    <a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@item.BookId"><img src="@item.Book.ImageUrl" style="height: 4em"></a>
                </td>
                <td>
                    <a class="a-cleanup" asp-controller="Store" asp-action="Details" asp-route-id="@item.BookId">@item.Book.BookName</a>
                </td>
                <td>
                    @itemTotal.ToString("c")
                </td>
                <td>
                    @item.Quantity
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
    <td></td>
    <td class="text-right">
        <strong>Total:</strong>
    </td>
    <td>
        <strong>@Model?.BillTotal.ToString("c")</strong>
    </td>
    <td></td>
    </tfoot>
</table>

