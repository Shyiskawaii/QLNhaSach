<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QLNhaSach</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/QLNhaSach.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.css" />
    <link rel="stylesheet" href="~/css/myCss.css" />
    <link rel="stylesheet" href="~/css/sidebar.css" />
</head>
<body>
    <div class="wrapper">
         @if (User.IsInRole("Admin"))
                    {
        <nav id="sidebar">
            <ul class="list-unstyled components">
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Books" asp-action="Index"><i class="fas fa-chalkboard-teacher"></i> Books</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Store" asp-action="Index"><i class="fas fa-user-graduate"></i> Store</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Bill" asp-action="Index"><i class="fas fa-building"></i> Bill</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" asp-area="" asp-controller="Storages" asp-action="Index"><i class="fas fa-clipboard-list"></i> Storages</a>
                </li>
                <li class="nav-item">
                        <a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="ListAllRoles"><i class="fas fa-user-tie"></i> Admin</a>
                </li>
            </ul>

        </nav>
        }
        <div id="content">
            <nav class="navbar navbar-expand-lg bg-light navbar-light fixed-top">
                <div class="container-fluid d-flex">
                    @if (User.IsInRole("Admin"))
                    {
                        <button class="btn btn-info d-inline-flex align-items-center" type="button" id="sidebarCollapse">
                            <i class="fas fa-align-left"></i><span class="ml-2">Admin</span>
                        </button>
                        <button class="btn btn-dark d-inline-flex d-lg-none align-items-center ml-2" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <i class="fas fa-align-justify"></i>
                        </button>
                    }

                    <div class="collapse navbar-collapse d-flex w-100" id="navbarSupportedContent">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item active">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Home</a>
                            </li>
                            <li class="nav-item active">
                                <a class="nav-link" asp-area="" asp-controller="Store" asp-action="Index"><i class="fas fa-home"></i> Store</a>
                            </li>
                        </ul>
                        
                        <ul class="navbar-nav d-flex align-items-center">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Cart" asp-action="Index"><i class="fa-solid fa-cart-shopping"></i></a>
                            </li>
                            <li class="nav-item">
                                <partial name="_LoginPartial" />
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div>
                @RenderBody()
            </div>
        </div>

    </div>
   

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/sidebar.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
